@typeparam TValue


<div class="dropdown w-100">
    <button 
            class="btn btn-primary dropdown-toggle w-100" 
            type="button" id="dropdownMunuButton" 
            data-toggle="dropdown" 
            aria-haspopup="true"
            aria-expanded="false">
    @SelectedItem  
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        @foreach(var item in SelectableItems)
            {
                <a class="dropdown-item" @onclick="@(() => OnItemClicked(item))">@item.DisplayText</a>
            }
    </div>

</div>
